<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/app_name" />

        <View
            android:id="@+id/top_bg_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/char_rec_top_bg"
            app:layout_constraintDimensionRatio="1125:429"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/middle_bg_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/char_rec_middle_bg"
            app:layout_constraintBottom_toTopOf="@+id/bottom_fl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bg_view" />

        <FrameLayout
            android:id="@+id/bottom_fl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/char_rec_bottom_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1125:612"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.wuyr.pathlayoutmanagertest.views.CanvasView
                android:id="@+id/track_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.wuyr.pathlayoutmanagertest.views.RecBottomView
                android:id="@+id/canvas_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- 中间背景和底部背景重叠区域 -->
        <View
            android:id="@+id/overlap_view"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="#3300F0FF"
            app:layout_constraintTop_toTopOf="@+id/bottom_fl"/>

        <com.wuyr.pathlayoutmanagertest.views.RecMiddleView
            android:id="@+id/rec_middle_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintBottom_toBottomOf="@id/overlap_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_bg_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/layout_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start" />
</androidx.drawerlayout.widget.DrawerLayout>